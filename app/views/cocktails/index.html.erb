<div class="container">
  <h1 class="text-center mt-3">Cocktails</h1>
  <div class="row mt-3">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail do %>
        <div class="card border-light m-2" style="width: 202px; height: 290px;">
          <% if cocktail.image_url %>
            <%= image_tag cocktail.image_url, width: '200px', height: '200px'%>
          <% end %>
          <% unless cocktail.photo.file.nil? %>
            <%= cl_image_tag cocktail.photo, height: 200, width: 200, crop: :fill %>
          <% end %>
          <div class="card-body d-flex align-items-center justify-content-center text-center">
            <span><%= cocktail.name %></span>
          </div>
        </div>
      <% end%>
    <% end %>
  </div>
</div>