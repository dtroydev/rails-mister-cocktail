<div class="cocktails-background" style="margin-top: 6rem; height: 100vh">
  <div class="container">
    <h1 class="mt-3 text-center">Add Cocktail</h1>
    <div class="row justify-content-center mt-5 w-100 text-center">
      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.input :name %>
        <%= f.input :instructions %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit class:'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>